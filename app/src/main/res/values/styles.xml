<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.MainSelectItem">

        <item name="android:button">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>

    </style>
    
    <style name="PersonTextStytle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/person_item_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#c0c0c0</item>
        <item name="android:onClick">setOperate</item>
    </style>

    <style name="MyDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/test</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <!-- 个人中心RadioButton样式-->
    <style name="PersonalCenterRadioButton">
        <item name="android:background">@drawable/personalcenter_radiobutton_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:width">0dp</item>
        <item name="android:textSize">15sp</item>
        <!--<item name="android:textColor">@drawable/selector</item>-->


    </style>


    <!-- 定义一个基本样式  基本样高宽式-->
    <style name="allWidthAndHeightWrapcontent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="allWidthAndHeightMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--网络设置中提示网络信息的  textView样式-->
    <style name="messageSettingNet" parent="allWidthAndHeightWrapcontent">
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>

    <style name="messageSettNet2" parent="messageSettingNet">
        <item name="android:clickable">true</item>
        <item name="android:textColor">#a7a7a7</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 设置进入软件  征求意见时 用户是否同意开用网络文本的大小 -->
    <style name="inSplashMessageTextStyle1" parent="allWidthAndHeightWrapcontent">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="inSplashMessageTextStyle" parent="allWidthAndHeightWrapcontent">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#80B3FF</item>
    </style>

    <!-- 设置页   字体大小和颜色-->
    <style name="settingTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#c0c0c0</item>
    </style>



</resources>
