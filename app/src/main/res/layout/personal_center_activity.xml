<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chsj.qingyue.PersonalCenterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/return_btn_selector" />

        <ImageView
            android:id="@+id/person_center_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/person_center_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_center_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="213"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            style="@style/PersonalCenterRadioButton"
            android:text="图片"

            />

        <RadioButton
            style="@style/PersonalCenterRadioButton"
            android:text="文章"

            />

        <RadioButton
            style="@style/PersonalCenterRadioButton"
            android:text="问题"

            />

        <RadioButton

            style="@style/PersonalCenterRadioButton"
            android:text="东西"

            />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

    </FrameLayout>

</LinearLayout>
