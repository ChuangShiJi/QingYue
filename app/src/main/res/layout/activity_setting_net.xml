<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    tools:context="com.example.zq.windowmanagertest.WorkOneActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="当前没有网络连接，请设置 "
            android:textColor="#d63189ff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_setting_wirelesss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="txtSetWire"
            android:text="设置移动网络 "
            android:textColor="#a7a7a7"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_setting_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="txtSetWifi"
            android:text="设置无线网络 "
            android:textColor="#a7a7a7"
            android:textSize="18sp" />
    </LinearLayout>


</android.support.v7.widget.CardView>
