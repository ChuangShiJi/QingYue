<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/allWidthAndHeightMatchParent"
    android:gravity="center"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    tools:context="com.example.zq.windowmanagertest.WorkOneActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/messageSettingNet"
            android:text="@string/messsge_now_no_net"
            android:textColor="#d63189ff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_setting_wirelesss"
            style="@style/messageSettNet2"
            android:onClick="txtSetWire"
            android:text="@string/message_set_net"
            />

        <TextView
            android:id="@+id/activity_setting_wifi"
            style="@style/messageSettNet2"
            android:onClick="txtSetWifi"
            android:text="@string/message_set_wifi"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>
