<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/allWidthAndHeightMatchParent"
    android:gravity="start|center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_view_load_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/message_savepic_photo"
        android:textColor="#6e6e6e"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#416e6e6e" />

    <TextView
        android:id="@+id/dialog_view_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/message_savepic_no"
        android:textColor="#6e6e6e"
        android:textSize="18sp" />
</LinearLayout>